<div>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h3 class="fw-bold text-primary mb-1">
        <i class="bi bi-kanban me-2"></i><%= @project.name %>
      </h3>
      <p class="text-muted mb-0"><%= @project.description.presence || "No description." %></p>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Tasks</h5>
          <% if @tasks.any? %>
            <div class="list-group">
              <% @tasks.each do |task| %>
                <%= link_to task_path(task),
                            class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                  <span><i class="bi bi-check2-square me-2"></i><%= task.title %></span>
                  <small class="text-muted"><%= time_ago_in_words(task.created_at) %> ago</small>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-info mb-0">No tasks yet.</div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h6 class="card-title">Project Details</h6>
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between">
              <strong>Created</strong>
              <span><%= @project.created_at.strftime("%b %d, %Y") %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <strong>Updated</strong>
              <span><%= @project.updated_at.strftime("%b %d, %Y") %></span>
            </li>
          </ul>
        </div>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <h6 class="card-title">Members</h6>
          <% if @project.users.any? %>
            <ul class="list-group list-group-flush">
              <% @project.users.each do |u| %>
                <li class="list-group-item">
                  <i class="bi bi-person-circle me-2"></i><%= u.name || u.email %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="alert alert-light mb-0">No members yet.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if turbo_frame_request? %>
  <%= render "details" %>
<% else %>
  <div class="container py-4">
    <%= render "details" %>
    <div class="mt-3">
      <%= link_to "Back to Projects", projects_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag "project_details" do %>
  <%= render "details" %>  <%# seu partial com nome/desc/tasks/members %>
<% end %>