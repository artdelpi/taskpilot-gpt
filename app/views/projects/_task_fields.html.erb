<div class="task-fields border rounded p-3 mb-3">
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Task title" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :due_date, class: "form-label" %>
      <%= f.date_field :due_date, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, rows: 2, class: "form-control" %>
    </div>
    <div class="col-md-2 mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, %w[pending in_progress done], {}, class: "form-select" %>
    </div>
    <div class="col-md-2 mb-3">
      <%= f.label :priority, class: "form-label" %>
      <%= f.select :priority, %w[low medium high], {}, class: "form-select" %>
    </div>
  </div>

  <%= f.hidden_field :_destroy, class: "task-destroy-flag" %>
  <button type="button" class="btn btn-outline-danger btn-sm remove-task">Remove</button>
</div>
