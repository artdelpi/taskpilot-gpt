<div class="d-flex justify-content-between align-items-center mb-2">
  <h5 class="card-title mb-0">Tasks</h5>
  <button id="openTaskModal" class="btn btn-primary btn-sm">New Task</button>
</div>

<div class="list-group" id="tasks_list">
  <% @tasks.each do |task| %>
    <%= render "tasks/item", task: task %>
  <% end %>
</div>

<!-- Modal de task -->
<div id="taskModal" class="modal-overlay" style="display:none;">
  <div class="modal-content" style="max-width: 700px;">
    <h5 class="mb-3 text-primary fw-bold"><i class="bi bi-check2-square me-2"></i>New Task</h5>
    <%= turbo_frame_tag "task_form_frame", src: new_project_task_path(@project) %>
  </div>
</div>
